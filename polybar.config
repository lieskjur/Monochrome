include-file = $HOME/.config/leftwm/themes/current/polybar.modules

[colors]
foreground = #FFFFFF
foreground-alt = #75715e
background = #272822
background-lighter = #4A433D
background-darker = #181915
alert = #f9246f

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0

[bar/mainbar1]
inherit = bar/barbase
modules-left = workspace1

[bar/barbase]
width = 100%:-32
monitor = ${env:monitor}
offset-x = 16
offset-y = 17
height = 26
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 3
border-color = ${colors.background-lighter}
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2
font-0 = Roboto:pixelsize=12;3 # text (any font you like)
font-1 = FiraCode Nerd Font:pixelsize=12;3 # icons (nerd font)
font-2 = FiraCode Nerd Font:pixelsize=12;3 # tags (monospace nerd font)
modules-center =
modules-right = pulseaudio brightness battery powermenu date 
tray-position = right
tray-padding = 0
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true
locale = cs_CZ.utf8

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t "$SCRIPTPATH/polybar.liquid"
tail = true

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t "$SCRIPTPATH/polybar.liquid"
tail = true

[settings]
;screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0